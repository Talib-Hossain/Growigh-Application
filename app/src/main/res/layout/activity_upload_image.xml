<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadImageActivity">
    <ImageView
        android:id="@+id/arrowIcon"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:src="@drawable/arrow_back_icon"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/uploadImageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Image"
        android:fontFamily="@font/roboto_regular"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginStart="80dp"
        app:layout_constraintTop_toTopOf="@id/arrowIcon"
        app:layout_constraintStart_toEndOf="@id/arrowIcon"/>
    
    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="215dp"
        android:layout_height="150dp"
        android:src="@drawable/profile_image"
        app:layout_constraintTop_toBottomOf="@id/uploadImageText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="95dp"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="92dp"
        android:src="@drawable/cross_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/uploadImageText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/selectImageButton"
        android:layout_width="344dp"
        android:layout_height="74dp"
        android:text="Select Image"
        android:fontFamily="@font/poppins_medium"
        android:background="@drawable/select_image_button_bg"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/profileImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="38dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/uploadImageButtonView"
        android:layout_width="344dp"
        android:layout_height="74dp"
        android:text="Upload Image"
        android:fontFamily="@font/poppins_medium"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:background="@drawable/button_gradient"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/selectImageButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="17dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>