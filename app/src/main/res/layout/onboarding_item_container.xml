<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/onBoardingImage"
        android:layout_width="265dp"
        android:layout_height="265dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/onboarding_image_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:id="@+id/onboardingLayoutGradientView"
        android:layout_width="320dp"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@id/onBoardingImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/onboarging_gradient"/>
    <TextView
        android:id="@+id/onboardingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:fontFamily="@font/manrope_regular"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="66dp"
        app:layout_constraintTop_toTopOf="@id/onboardingLayoutGradientView"
        app:layout_constraintStart_toStartOf="@id/onboardingLayoutGradientView"/>
    <TextView
        android:id="@+id/onboardingDesc"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#66FFFFFF"
        android:textSize="14sp"
        android:text="@string/onBoardingDesc_1"
        android:fontFamily="@font/manrope_regular"
        app:layout_constraintTop_toBottomOf="@id/onboardingText"
        app:layout_constraintStart_toStartOf="@id/onboardingText"/>



</androidx.constraintlayout.widget.ConstraintLayout>